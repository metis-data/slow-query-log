{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "TS Library",
    "extends": "./base.json",
    "compilerOptions": {
      "lib": ["ES2015", "dom", "dom.iterable", "esnext"],
      "module": "ESNext",
      "target": "es6",
      "allowJs": true,
      "declaration": false,
      "declarationMap": false,
      "incremental": true,
      "noEmit": true,
      "resolveJsonModule": true,
      "strict": false
    },
    "include": ["./src", "next-env.d.ts"],
    "exclude": ["node_modules"]
  }