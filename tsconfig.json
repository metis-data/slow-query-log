{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "lib",
    "lib": ["es2021"],
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "**/tests/**", "**/*.spec.ts", "example"]
}